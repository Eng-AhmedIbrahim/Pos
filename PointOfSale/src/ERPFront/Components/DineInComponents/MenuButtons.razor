@inject NavigationManager _navigationManager
@inject CommonProperties _commonProperties


<MudGrid Spacing="1" Justify="Justify.Center">
    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button active-button"
                   Size="Size.Large"
                   OnClick="CreateDineInOrder">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Order</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Add New</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.Receipt" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Receipt</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.TableBar" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Close Table</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.Delete" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Void</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large">
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.SwapHoriz" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Transfer</MudText>
            </MudStack>
        </MudButton>
    </MudItem>

    <MudItem xs="12">
        <MudButton Variant="Variant.Filled"
                   Class="full-height-button special-keypad-button"
                   Size="Size.Large"
                   OnClick='()=>_navigationManager.NavigateTo("/pos")'>
            <MudStack Row="false" AlignItems="AlignItems.Center" Spacing="1">
                <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Class="button-icon" />
                <MudText Typo="Typo.subtitle2">Back</MudText>
            </MudStack>
        </MudButton>
    </MudItem>
</MudGrid>

<style>
    .full-height-button {
        height: calc((100vh - 68px) / 7);
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-transform: none;
    }

    .button-icon {
        font-size: 2rem;
    }

    .special-keypad-button {
        background: linear-gradient(135deg, #ffffff, #e7ecf5);
        color: #143155 !important;
    }

    .active-button {
        background: linear-gradient(135deg, #fbd14b, #ffea92);
        color: black !important;
    }
</style>
