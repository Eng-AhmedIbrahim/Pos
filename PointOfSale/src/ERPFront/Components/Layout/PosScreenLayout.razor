@using ERPFront.Components.Auth
@inherits LayoutComponentBase


<TokenInitializer />

@* Required *@
<MudThemeProvider/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snack bars *@
<MudSnackbarProvider/>

<MudLayout>
    <MudStack Spacing="0" Justify="Justify.Center" AlignItems="AlignItems.Center" StretchItems="StretchItems.Middle">
        <MudPaper Class="w-100 rounded-0 make-color p-1">
            <POSNavbarCommponent />
        </MudPaper>
        <MudPaper Class="w-100 rounded-0 full-height-for-body overflow-hidden">
            @Body
        </MudPaper>
        <MudPaper Class="w-100 rounded-0">
            <POSFooterCommponent />
        </MudPaper>

    </MudStack>
</MudLayout>


<style>
    .make-color {
    background-color: #022e66; 
    }
    .full-height-for-body {
    height: calc(100vh - 90.25px);
    max-height: calc(100vh - 90.25px);
    overflow-y: scroll;
    box-sizing: border-box;
    }


</style>