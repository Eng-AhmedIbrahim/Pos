@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snack bars *@
<MudSnackbarProvider />

<MudLayout>
    <MudStack Spacing="0" Justify="Justify.Center" AlignItems="AlignItems.Center" StretchItems="StretchItems.Middle">
        <MudPaper Class="w-100 rounded-0 full-height-for-body overflow-hidden">
            @Body
        </MudPaper>
    </MudStack>
</MudLayout>


<style>
    .make-color {
        background-color: #022e66;
    }

    .full-height-for-body {
        height:100vh; 
        max-height: 100vh;
        overflow-y: scroll;
        box-sizing: border-box;
    }

</style>